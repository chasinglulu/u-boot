/ {
	glb_ctrl {
		compatible = "simple-bus";
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		common_glb: common-glb@06100000 {
			compatible = "syscon", "simple-mfd";
			reg = <0x00 0x06100000 0x00 0x1000>;
			#address-cells = <1>;
			#size-cells = <1>;
			ranges = <0x00 0x00 0x06100000 0x1000>;
		};

		cpu_glb: cpu-glb@08010000 {
