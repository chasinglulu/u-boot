if AXERA_LMT

choice
	prompt "Axera Lambert SoC board select"

config TARGET_LMT_DVB
	bool "Lambert SoC Development Verification board"
	select LMT_SOC
	help
	  Lambert DVB is a development board for Axera Lambert SoC,
	  with full function and physical connectors support like MIPI,
	  JTAG, MAC, SD card, CAN, QSPI, PCIe, USB-to-serial...

config TARGET_LMT_VIRT
	bool "Lambert Virtual Qemu Development board"
	select LMT_SOC
	help
	  lmt-virt is a virtual development board for Axera Lambert SoC based on QEMU,
	  with a few part of function and physical connectors support
	  like eMMC, MAC, SDIO, GPIO, I2C, PCIe...

config TARGET_LMT_FPGA
	bool "Lambert FPGA Verification board"
	select LMT_DW8250
	select LMT_SOC
	help
	  FPGA is a verification board for Axera Lambert SoC,
	  with a little function and physical connectors support like UART,
	  JTAG, eMMC, PCIe, USB-to-serial...

endchoice

config LMT_SOC
	bool

config SYS_MALLOC_F_LEN
	default 0x4000

menu "Lambert SoC features"

config LMT_DRAM_BASE
	hex "Lamert DRAM Address Space Base"
	depends on LMT_SOC
	default 0x400000000

menu "SPL Load Images"
	depends on SPL

config LMT_SPL_ATF_LOAD_ADDR
	hex "ATF firmware load address"
	depends on LMT_SOC
	default 0x400104000

config LMT_SPL_OPTEE_LOAD_ADDR
	hex "OP-TEE firmware load address"
	depends on LMT_SOC
	default 0x404000000

endmenu

menu "U-Boot Load Images"
config LMT_SCRIPT_LOAD_ADDR
	hex "Boot script load address"
	depends on LMT_SOC
	default 0x40f000000

config LMT_KERNEL_LOAD_NAME
	string "Kernel image name"
	default Image

config LMT_KERNEL_LOAD_ADDR
	hex "Kernel image load address"
	depends on LMT_SOC
	default 0x410000000

config LMT_KERNEL_COMP_ADDR
	hex "Kernel image decompression address"
	default 0x420000000

config LMT_KERNEL_COMP_SIZE
	hex "Kernel image decompression buffer size"
	default 0x04000000

config LMT_FDT_LOAD_NAME
	string "FDT image name"
	default "lambert-virt.dtb"

config LMT_FDT_LOAD_ADDR
	hex "DTB image load address"
	depends on LMT_SOC
	default 0x418000000

config LMT_RAMDISK_LOAD_NAME
	string "initramfs image load name"
	default "rootfs.cpio.gz"

config LMT_RAMDISK_LOAD_ADDR
	hex "initramfs image load address"
	depends on LMT_SOC
	default 0x419000000

endmenu

config LMT_SWITCH_TO_EL2
	bool "Force switch to EL2"
	help
	  This option is used to switch CPU into EL2 state. When verifying on the FPGA,
	  there is no BL31 environment, and the CPU cannot directly enter the EL2 state,
	  so it is necessary to switch the CPU to the EL2 state when U-boot starts executing.

config LMT_ENABLE_GICV2
	bool "Enable GICv2"
	select GICV2
	help
	  This option enables GIC-400. When running on an FPGA alone,
	  we can initialize GIC without BL31, configure security related settings,
	  and complete the same initialization configuration of GIC as BL31.

source "board/axera/common/Kconfig"

endmenu

config SYS_SOC
	default "lambert"

config SYS_CONFIG_NAME
	default "lambert" if LMT_SOC

config SYS_VENDOR
	default "axera"

source "board/axera/dvb/Kconfig"
source "board/axera/qemu-virt/Kconfig"
source "board/axera/fpga/Kconfig"

endif
